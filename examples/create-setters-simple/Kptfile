apiVersion: kpt.dev/v1
kind: Kptfile
metadata:
  name: example
  annotations:
    config.kubernetes.io/local-config: "true"
pipeline:
  mutators:
    - image: ghcr.io/kptdev/krm-functions-catalog/create-setters:latest
      configPath: setters.yaml
      selectors:
        - kind: Deployment
        - kind: MyKind
