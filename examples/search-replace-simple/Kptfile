apiVersion: kpt.dev/v1
kind: Kptfile
metadata:
  name: example
  annotations:
    config.kubernetes.io/local-config: "true"
pipeline:
  mutators:
    - image: ghcr.io/kptdev/krm-functions-catalog/search-replace:latest
      configMap:
        by-path: metadata.name
        by-value: the-deployment
        put-value: my-deployment
