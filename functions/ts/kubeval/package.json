    "format": "prettier \"src/**\" \"**/*.json\" --write",
    "pretest": "npm run build",
    "test": "jasmine --config=jasmine.json",
    "posttest": "npm run lint",
    "kpt:docker-create": "kpt docker-create",
    "kpt:docker-build": "kpt docker-build",
